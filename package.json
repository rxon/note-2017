{
  "name": "note-2017",
  "version": "0.1.0",
  "description": "rxon's miniminimal blog",
  "license": "MIT",
  "repository": "rxon/note-2017",
  "author": {
    "name": "rxon",
    "url": "rxon.github.io"
  },
  "scripts": {
    "start": "node --harmony-async-await note.js",
    "lint": "npm run lint:md & npm run lint:js",
    "lint:js": "xo note.js",
    "lint:md": "shx find post/*.md | xargs textlint --cache post/",
    "test": "mocha -R --harmony nyan test/note.js",
    "deploy": "now --alias"
  },
  "xo": {
    "esnext": true,
    "space": true
  },
  "devDependencies": {
    "mocha": "^3.2.0",
    "rewire": "^2.5.2",
    "shx": "^0.2.1",
    "supertest": "^3.0.0",
    "textlint": "^7.1.4",
    "textlint-rule-incremental-headers": "^0.2.0",
    "textlint-rule-ja-no-redundant-expression": "^1.0.1",
    "textlint-rule-no-dead-link": "^3.0.1",
    "textlint-rule-preset-ja-technical-writing": "^1.0.0",
    "textlint-rule-preset-jtf-style": "2.2.3",
    "textlint-rule-spellcheck-tech-word": "5.0.0",
    "xo": "0.17.1"
  },
  "dependencies": {
    "express": "^4.14.1",
    "helmet": "^3.4.0",
    "highlight.js": "^9.9.0",
    "lodash": "^4.17.4",
    "marked": "^0.3.6",
    "morgan": "^1.8.1",
    "mustache": "^2.3.0",
    "mz": "^2.6.0"
  }
}
